<div class="content-wrapper pb-0">
    <div class="page-header flex-wrap">
        <h3 class="mb-0"><%= locals.title %>
        </h3>
    </div>
    <div class="row">
        <% locals.category_list.forEach((category) => { %>
            <div class="col-4 mb-4">
                <div class="card h-100 ">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="overflow-hidden" style="height: 5rem">
                            <div class="card-title font-weight-medium"><%= category.name %></div>
                            <p class="text-muted text-justify"><%= category.description %></p>
                        </div>
                        <a class="text-black mt-3 d-block font-weight-medium h6" href="<%= category.url %>">
                            More <i class="mdi mdi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
