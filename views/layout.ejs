<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= locals.title %></title>
    <base href="/">
    <link rel="stylesheet" href="assets/vendors/mdi/css/materialdesignicons.min.css"/>
    <link rel="stylesheet" href="assets/vendors/flag-icon-css/css/flag-icon.min.css"/>
    <link rel="stylesheet" href="assets/vendors/css/vendor.bundle.base.css"/>
    <link rel="stylesheet" href="assets/vendors/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css"/>
    <link rel="stylesheet" href="assets/css/style.css"/>
    <link rel="shortcut icon" href="assets/images/favicon.png"/>
</head>
<body>
<div class="container-scroller">
    <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
            <a class="sidebar-brand brand-logo" href="/catalog">
                <img src="assets/images/logo.svg" alt="logo"/>
            </a>
            <a class="sidebar-brand brand-logo-mini pl-4 pt-3" href="/catalog">
                <img src="assets/images/logo-mini.svg" alt="logo"/>
            </a>
        </div>
        <ul class="nav">
            <li class="nav-item mt-5">
                <a class="nav-link" href="/catalog">
                    <i class="mdi mdi-home menu-icon"></i>
                    <span class="menu-title">Home</span>
                </a>
            </li>
            <li class="nav-item mt-3">
                <a class="nav-link" href="/catalog/games">
                    <i class="mdi mdi-crown menu-icon"></i>
                    <span class="menu-title">All Games</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/catalog/authors">
                    <i class="mdi mdi-account-circle menu-icon"></i>
                    <span class="menu-title">All Authors</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/catalog/categories">
                    <i class="mdi mdi-animation menu-icon"></i>
                    <span class="menu-title">All Categories</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/catalog/game_instances">
                    <i class="mdi mdi-google-play menu-icon"></i>
                    <span class="menu-title">All Game Instances</span>
                </a>
            </li>
            <li class="nav-item mt-3">
                <a class="nav-link" href="/catalog/game/create">
                    <i class="mdi mdi-cards menu-icon"></i>
                    <span class="menu-title">Create Game</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/catalog/author/create">
                    <i class="mdi mdi-account-plus menu-icon"></i>
                    <span class="menu-title">Create Author</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/catalog/category/create">
                    <i class="mdi mdi-filter-menu menu-icon"></i>
                    <span class="menu-title">Create Category</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/catalog/game_instance/create">
                    <i class="mdi mdi-inbox menu-icon"></i>
                    <span class="menu-title">Create Game Instances</span>
                </a>
            </li>
        </ul>
    </nav>
    <div class="container-fluid page-body-wrapper">
        <div id="theme-settings" class="settings-panel">
            <i class="settings-close mdi mdi-close"></i>
            <p class="settings-heading">SIDEBAR SKINS</p>
            <div class="sidebar-bg-options selected" id="sidebar-default-theme">
                <div class="img-ss rounded-circle bg-light border mr-3"></div>
                Default
            </div>
            <div class="sidebar-bg-options" id="sidebar-dark-theme">
                <div class="img-ss rounded-circle bg-dark border mr-3"></div>
                Dark
            </div>
            <p class="settings-heading mt-2">HEADER SKINS</p>
            <div class="color-tiles mx-0 px-4">
                <div class="tiles light"></div>
                <div class="tiles dark"></div>
            </div>
        </div>
        <nav class="navbar col-lg-12 col-12 p-lg-0 fixed-top d-flex flex-row">
            <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
                <a class="navbar-brand brand-logo-mini align-self-center d-lg-none" href="/catalog"><img
                            src="assets/images/logo-mini.svg" alt="logo"/></a>
                <button class="navbar-toggler navbar-toggler align-self-center mr-2" type="button"
                        data-toggle="minimize">
                    <i class="mdi mdi-menu"></i>
                </button>
                <ul class="navbar-nav navbar-nav-right ml-lg-auto">
                    <li class="nav-item nav-profile border-0">
                        <a class="nav-link" href="#">
                            <img class="nav-profile-img mr-2" alt="" src="assets/images/faces/face5.jpg"/>
                            <span class="profile-name">David Andrianarivo</span>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                        data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <div class="main-panel">
            <%- body %>

            <footer class="footer">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright Â© bootstrapdash.com 2020</span>
                    <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a
                                href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard template</a> from Bootstrapdash.com</span>
                </div>
            </footer>
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="assets/vendors/js/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<script src="assets/vendors/chart.js/Chart.min.js"></script>
<script src="assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<script src="assets/vendors/flot/jquery.flot.js"></script>
<script src="assets/vendors/flot/jquery.flot.resize.js"></script>
<script src="assets/vendors/flot/jquery.flot.categories.js"></script>
<script src="assets/vendors/flot/jquery.flot.fillbetween.js"></script>
<script src="assets/vendors/flot/jquery.flot.stack.js"></script>
<script src="assets/vendors/flot/jquery.flot.pie.js"></script>
<!-- End plugin js for this page -->
<!-- inject:js -->
<script src="assets/js/off-canvas.js"></script>
<script src="assets/js/hoverable-collapse.js"></script>
<script src="assets/js/misc.js"></script>
<!-- endinject -->
<!-- Custom js for this page -->
<script src="assets/js/dashboard.js"></script>
<!-- End custom js for this page -->
</body>
</html>