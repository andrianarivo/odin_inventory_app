<div class="content-wrapper pb-0">
    <div class="page-header flex-wrap">
        <h3 class="mb-0"> Hi, welcome to Meta Boarder! <span
                    class="pl-0 h6 pl-sm-2 text-muted d-inline-block">A very basic Express website developed as a project in the Odin Project journey.</span>
        </h3>
    </div>
    <div class="d-flex flex-wrap" style="gap: 10px;">
        <div class="card bg-warning">
            <div class="card-body px-3 py-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head">Games</p>
                        <h2 class="text-white"> <%= locals.game_count %>.<span class="h5">00</span>
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                </div>
                <h6 class="text-white">Types of games we sell</h6>
            </div>
        </div>
        <div class="card bg-danger">
            <div class="card-body px-3 py-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head">Authors</p>
                        <h2 class="text-white"> <%= locals.author_count %>.<span class="h5">00</span>
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                </div>
                <h6 class="text-white">Board Game designers</h6>
            </div>
        </div>
        <div class="card bg-primary">
            <div class="card-body px-3 py-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head">Categories</p>
                        <h2 class="text-white"> <%= locals.category_count %>.<span class="h5">00</span>
                        </h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                </div>
                <h6 class="text-white">Styles of board games</h6>
            </div>
        </div>
        <div class="card bg-success">
            <div class="card-body px-3 py-4">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="color-card">
                        <p class="mb-0 color-card-head">Copies</p>
                        <h2 class="text-white"><%= locals.game_instance_count %></h2>
                    </div>
                    <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                </div>
                <h6 class="text-white">Local copies by Publisher</h6>
            </div>
        </div>
    </div>
</div>